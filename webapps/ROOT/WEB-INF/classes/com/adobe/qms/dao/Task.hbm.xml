<hibernate-mapping>
    <class name="com.adobe.qms.dao.Task" table="task">
        <id name="taskId" type="java.lang.Integer">
            <column name="task_id" />
            <generator class="increment" />
        </id>
        <property name="taskName" type="java.lang.String">
            <column name="task_name" length="45" not-null="true" />
        </property>
        <property name="taskDesc" type="java.lang.String">
            <column name="task_desc" length="65535" />
        </property>
        <set name="jobDetails" inverse="true">
            <key>
                <column name="task_id" not-null="true" />
            </key>
            <one-to-many class="com.adobe.qms.dao.JobDetail" />
        </set>
        <set name="executionDetails" inverse="true">
            <key>
                <column name="task_id" not-null="true" />
            </key>
            <one-to-many class="com.adobe.qms.dao.ExecutionDetail" />
        </set>
    </class>
</hibernate-mapping>
